      {
        "id": 10,
        "title": "Infrastructure Resource Utilization",
        "type": "table",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 42},
        "targets": [
          {
            "expr": "bmad_cpu_usage_percentage by (instance, story_id)",
            "legendFormat": "",
            "refId": "A",
            "datasource": "Prometheus",
            "format": "table",
            "instant": true
          },
          {
            "expr": "bmad_memory_usage_percentage by (instance, story_id)",
            "legendFormat": "",
            "refId": "B",
            "datasource": "Prometheus",
            "format": "table",
            "instant": true
          },
          {
            "expr": "bmad_disk_usage_percentage by (instance, story_id)",
            "legendFormat": "",
            "refId": "C",
            "datasource": "Prometheus",
            "format": "table",
            "instant": true
          }
        ],
        "description": "Infrastructure resource utilization by BMAD story and instance",
        "transformations": [
          {
            "id": "seriesToColumns",
            "options": {
              "byField": "instance"
            }
          },
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true
              },
              "indexByName": {},
              "renameByName": {
                "instance": "Instance",
                "story_id": "Story ID",
                "Value #A": "CPU %",
                "Value #B": "Memory %",
                "Value #C": "Disk %"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "center",
              "displayMode": "color-background",
              "filterable": true
            },
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Story ID"
            }
          ]
        }
