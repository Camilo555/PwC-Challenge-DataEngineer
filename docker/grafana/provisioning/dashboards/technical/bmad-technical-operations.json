      {
        "id": 9,
        "title": "Real-time Streaming Metrics",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 34},
        "targets": [
          {
            "expr": "bmad_streaming_latency_seconds by (stream_name)",
            "legendFormat": "{{stream_name}} Latency",
