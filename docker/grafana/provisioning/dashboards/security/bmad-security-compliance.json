{
  "dashboard": {
    "id": null,
    "uid": "bmad-security-compliance",
    "title": "BMAD Security & Compliance - Zero Trust Monitoring",
    "description": "Comprehensive security and compliance monitoring for $27.8M BMAD implementation with zero trust validation",
    "tags": ["security", "compliance", "bmad", "zero-trust", "governance"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Overall Security Posture",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "avg(bmad_security_posture_score)",
            "legendFormat": "Security Score",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ],
        "description": "Overall security posture score across all BMAD components",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 85},
                {"color": "green", "value": 95},
                {"color": "dark-green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 2,
        "title": "Compliance Score by Framework",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0},
        "targets": [
          {
            "expr": "bmad_compliance_score by (framework)",
            "legendFormat": "{{framework}}",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ],
        "description": "Compliance scores for different regulatory frameworks",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95},
                {"color": "dark-green", "value": 99}
              ]
            },
            "mappings": [
              {
                "type": "value",
                "options": {
                  "from": 99,
                  "to": 100,
                  "result": {
                    "text": "COMPLIANT",
                    "color": "green"
                  }
                }
              }
            ]
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 3,
        "title": "Active Security Incidents",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0},
        "targets": [
          {
            "expr": "sum(bmad_security_incidents_active)",
            "legendFormat": "Active Incidents",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ],
        "description": "Current number of active security incidents",
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area",
          "justifyMode": "center"
        }
      },
      {
        "id": 4,
        "title": "Security Incidents Timeline",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "increase(bmad_security_incidents_total[1h]) by (severity)",
            "legendFormat": "{{severity}} Severity",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ],
        "description": "Security incidents over time by severity level",
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 80,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "normal", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "critical Severity"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "high Severity"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "medium Severity"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "yellow"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["sum", "max"]}
        }
      },
      {
        "id": 5,
        "title": "Threat Detection Accuracy",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "bmad_threat_detection_accuracy_percentage",
            "legendFormat": "Detection Accuracy",
            "refId": "A",
            "datasource": "Prometheus"
          },
          {
            "expr": "bmad_false_positive_rate_percentage",
            "legendFormat": "False Positive Rate",
            "refId": "B",
            "datasource": "Prometheus"
          }
        ],
        "description": "AI-powered threat detection system accuracy and false positive rates",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "False Positive Rate"},
              "properties": [
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": 0},
                      {"color": "yellow", "value": 5},
                      {"color": "red", "value": 10}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 6,
        "title": "Authentication and Access Control",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "rate(bmad_auth_attempts_total[5m])",
            "legendFormat": "Auth Attempts/sec",
            "refId": "A",
            "datasource": "Prometheus"
          },
          {
            "expr": "rate(bmad_auth_failures_total[5m])",
            "legendFormat": "Auth Failures/sec",
            "refId": "B",
            "datasource": "Prometheus"
          },
          {
            "expr": "rate(bmad_suspicious_login_attempts_total[5m])",
            "legendFormat": "Suspicious Attempts/sec",
            "refId": "C",
            "datasource": "Prometheus"
          }
        ],
        "description": "Authentication patterns and suspicious login attempts",
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "line"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 10}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Auth Failures/sec"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Suspicious Attempts/sec"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "orange"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "mean", "max"]}
        }
      },
      {
        "id": 7,
        "title": "Zero Trust Policy Violations",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "bmad_zero_trust_violations by (policy_name, user_id, resource)",
            "legendFormat": "",
            "refId": "A",
            "datasource": "Prometheus",
            "format": "table",
            "instant": true
          }
        ],
        "description": "Recent zero trust policy violations requiring attention",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "policy_name": "Policy",
                "user_id": "User ID",
                "resource": "Resource",
                "Value": "Violations"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "color-background",
              "filterable": true
            },
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 3}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Violations"},
              "properties": [
                {"id": "unit", "value": "short"}
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": true,
              "displayName": "Violations"
            }
          ]
        }
      },
      {
        "id": 8,
        "title": "Data Loss Prevention (DLP) Status",
        "type": "stat",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "bmad_dlp_violations_detected_total",
            "legendFormat": "DLP Violations (24h)",
            "refId": "A",
            "datasource": "Prometheus"
          },
          {
            "expr": "bmad_dlp_policies_active",
            "legendFormat": "Active Policies",
            "refId": "B",
            "datasource": "Prometheus"
          },
          {
            "expr": "bmad_dlp_coverage_percentage",
            "legendFormat": "Coverage %",
            "refId": "C",
            "datasource": "Prometheus"
          }
        ],
        "description": "Data loss prevention monitoring and policy enforcement",
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Coverage %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "red", "value": 0},
                      {"color": "yellow", "value": 90},
                      {"color": "green", "value": 95}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none",
          "justifyMode": "center"
        }
      },
      {
        "id": 9,
        "title": "Audit Trail Completeness",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "bmad_audit_trail_completeness_percentage",
            "legendFormat": "Audit Completeness",
            "refId": "A",
            "datasource": "Prometheus"
          }
        ],
        "description": "Completeness of audit trails for compliance requirements",
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 95},
                {"color": "green", "value": 99}
              ]
            }
          }
        },
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 10,
        "title": "Security Controls Effectiveness",
        "type": "heatmap",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "bmad_security_control_effectiveness by (control_type, story_id)",
            "legendFormat": "{{control_type}}",
            "refId": "A",
            "datasource": "Prometheus",
            "format": "time_series"
          }
        ],
        "description": "Effectiveness of different security controls across BMAD stories",
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "scaleDistribution": {"type": "linear"}
            },
            "color": {
              "mode": "continuous-GrYlRd",
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "calculate": false,
          "cellGap": 2,
          "cellValues": {},
          "color": {
            "exponent": 0.5,
            "fill": "dark-orange",
            "mode": "spectrum",
            "reverse": false,
            "scale": "exponential",
            "scheme": "Spectral",
            "steps": 64
          },
          "exemplars": {
            "color": "rgba(255,0,255,0.7)"
          },
          "filterValues": {
            "le": 1e-9
          },
          "legend": {
            "show": true
          },
          "rowsFrame": {
            "layout": "auto"
          },
          "tooltip": {
            "show": true,
            "yHistogram": false
          },
          "yAxis": {
            "axisPlacement": "left",
            "reverse": false,
            "unit": "short"
          }
        }
      },
      {
        "id": 11,
        "title": "Vulnerability Management",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
        "targets": [
          {
            "expr": "bmad_vulnerabilities_critical",
            "legendFormat": "Critical Vulnerabilities",
            "refId": "A",
            "datasource": "Prometheus"
          },
          {
            "expr": "bmad_vulnerabilities_high",
            "legendFormat": "High Vulnerabilities",
            "refId": "B",
            "datasource": "Prometheus"
          },
          {
            "expr": "bmad_vulnerabilities_patched_rate",
            "legendFormat": "Patching Rate %",
            "refId": "C",
            "datasource": "Prometheus"
          }
        ],
        "description": "Vulnerability discovery and remediation tracking",
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "none",
              "spanNulls": false,
              "insertNulls": false,
              "showPoints": "never",
              "pointSize": 5,
              "stacking": {"mode": "none", "group": "A"},
              "axisPlacement": "auto",
              "axisLabel": "",
              "scaleDistribution": {"type": "linear"},
              "hideFrom": {"legend": false, "tooltip": false, "vis": false},
              "thresholdsStyle": {"mode": "off"}
            },
            "color": {"mode": "palette-classic"},
            "unit": "short"
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Critical Vulnerabilities"},
              "properties": [
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "red"}}
              ]
            },
            {
              "matcher": {"id": "byName", "options": "Patching Rate %"},
              "properties": [
                {"id": "unit", "value": "percent"},
                {"id": "custom.axisPlacement", "value": "right"},
                {"id": "color", "value": {"mode": "fixed", "fixedColor": "green"}}
              ]
            }
          ]
        },
        "options": {
          "tooltip": {"mode": "multi", "sort": "desc"},
          "legend": {"displayMode": "table", "placement": "bottom", "calcs": ["lastNotNull", "mean"]}
        }
      },
      {
        "id": 12,
        "title": "Compliance Framework Status",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
        "targets": [
          {
            "expr": "bmad_compliance_framework_status by (framework, requirement, status)",
            "legendFormat": "",
            "refId": "A",
            "datasource": "Prometheus",
            "format": "table",
            "instant": true
          }
        ],
        "description": "Detailed compliance status by framework and requirement",
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true
              },
              "indexByName": {},
              "renameByName": {
                "framework": "Framework",
                "requirement": "Requirement",
                "status": "Status",
                "Value": "Score"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "color-background",
              "filterable": true
            },
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": null},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          },
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Status"},
              "properties": [
                {
                  "id": "mappings",
                  "value": [
                    {
                      "type": "value",
                      "options": {
                        "compliant": {
                          "text": "✓ COMPLIANT",
                          "color": "green"
                        }
                      }
                    },
                    {
                      "type": "value",
                      "options": {
                        "non_compliant": {
                          "text": "✗ NON-COMPLIANT",
                          "color": "red"
                        }
                      }
                    },
                    {
                      "type": "value",
                      "options": {
                        "partial": {
                          "text": "⚠ PARTIAL",
                          "color": "yellow"
                        }
                      }
                    }
                  ]
                }
              ]
            }
          ]
        },
        "options": {
          "showHeader": true,
          "sortBy": [
            {
              "desc": false,
              "displayName": "Framework"
            }
          ]
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 30,
    "version": 1,
    "editable": true,
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": "Prometheus",
          "definition": "label_values(bmad_security_incidents_total, story_id)",
          "hide": 0,
          "includeAll": true,
          "label": "BMAD Story",
          "multi": true,
          "name": "story_id",
          "options": [],
          "query": {
            "query": "label_values(bmad_security_incidents_total, story_id)",
