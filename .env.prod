# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# SECURITY NOTE: Use proper secrets management in production!
# =============================================================================

# Environment
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=pwc-prod

# Database Configuration (Use strong passwords!)
POSTGRES_DB=${POSTGRES_DB}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_PORT=${POSTGRES_PORT:-5432}
DATABASE_TYPE=postgresql

# Message Queue Configuration
RABBITMQ_USER=${RABBITMQ_USER}
RABBITMQ_PASSWORD=${RABBITMQ_PASSWORD}
RABBITMQ_PORT=${RABBITMQ_PORT:-5672}
RABBITMQ_MANAGEMENT_PORT=${RABBITMQ_MANAGEMENT_PORT:-15672}
RABBITMQ_ERLANG_COOKIE=${RABBITMQ_ERLANG_COOKIE}

# Streaming Configuration
ZOOKEEPER_PORT=${ZOOKEEPER_PORT:-2181}
KAFKA_PORT=${KAFKA_PORT:-9092}
KAFKA_JMX_PORT=${KAFKA_JMX_PORT:-9101}
KAFKA_EXTERNAL_HOST=${KAFKA_EXTERNAL_HOST}
KAFKA_LOG_RETENTION_HOURS=${KAFKA_LOG_RETENTION_HOURS:-168}
KAFKA_NUM_PARTITIONS=${KAFKA_NUM_PARTITIONS:-6}

# Spark Configuration
SPARK_MASTER_WEB_UI_PORT=${SPARK_MASTER_WEB_UI_PORT:-8080}
SPARK_MASTER_PORT=${SPARK_MASTER_PORT:-7077}
SPARK_WORKER_MEMORY=${SPARK_WORKER_MEMORY:-4G}
SPARK_WORKER_CORES=${SPARK_WORKER_CORES:-4}
SPARK_SSL_ENABLED=${SPARK_SSL_ENABLED:-no}
SPARK_AUTH_SECRET=${SPARK_AUTH_SECRET}
SPARK_SSL_KEYSTORE=${SPARK_SSL_KEYSTORE}
SPARK_SSL_KEYSTORE_PASSWORD=${SPARK_SSL_KEYSTORE_PASSWORD}
SPARK_SSL_TRUSTSTORE=${SPARK_SSL_TRUSTSTORE}
SPARK_SSL_TRUSTSTORE_PASSWORD=${SPARK_SSL_TRUSTSTORE_PASSWORD}
PROCESSING_ENGINE=spark

# Vector Database Configuration
TYPESENSE_API_KEY=${TYPESENSE_API_KEY}
TYPESENSE_PORT=${TYPESENSE_PORT:-8108}

# API Configuration
API_PORT=${API_PORT:-8000}
API_WORKERS=${API_WORKERS:-4}
API_MAX_REQUESTS=${API_MAX_REQUESTS:-1000}
API_MAX_REQUESTS_JITTER=${API_MAX_REQUESTS_JITTER:-100}
SECRET_KEY=${SECRET_KEY}
BASIC_AUTH_PASSWORD=${BASIC_AUTH_PASSWORD}

# Orchestration
DAGSTER_PORT=${DAGSTER_PORT:-3000}

# Monitoring
DD_API_KEY=${DD_API_KEY}
DD_APP_KEY=${DD_APP_KEY}
DD_SITE=${DD_SITE:-datadoghq.com}
PROMETHEUS_PORT=${PROMETHEUS_PORT:-9090}
GRAFANA_PORT=${GRAFANA_PORT:-3001}
GRAFANA_ADMIN_PASSWORD=${GRAFANA_ADMIN_PASSWORD}
GRAFANA_PROTOCOL=${GRAFANA_PROTOCOL:-http}
GRAFANA_DOMAIN=${GRAFANA_DOMAIN:-localhost}

# Backup Configuration
BACKUP_SCHEDULE=${BACKUP_SCHEDULE:-0 2 * * *}
BACKUP_RETENTION_DAYS=${BACKUP_RETENTION_DAYS:-30}
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY}

# Data Paths (for production volume mounts)
DATA_PATH=${DATA_PATH:-/opt/pwc-data}

# Logging
LOG_LEVEL=INFO
DEBUG=false

# Application
APP_VERSION=${APP_VERSION:-1.0.0}